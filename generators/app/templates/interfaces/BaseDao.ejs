import BaseEntity from "@models/BaseEntity";
import { SortOrder } from "mongoose";



export default interface BaseDao<T extends BaseEntity> {
    save(test: T): Promise<T>;
    getById(idToReturn: string): Promise<T>;
    get(page: number, size: number, filters?: Array<[string, string]>, order?: Array<[string, SortOrder]>): Promise<T[]>;
    getAll(): Promise<T[]>;
    update(entityToUpdate: T): Promise<T>;
    deleteById(idToDelete: string): Promise<T>;
    delete(filters: Array<[string, string]>): Promise<{ message: string }>;
    deleteAll(): Promise<{ message: string }>;
}